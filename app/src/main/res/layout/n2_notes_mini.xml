<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/n2_mini"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10sp"
    android:paddingBottom="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/n2_mini_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/blank"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/n2_mini_lock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="0.1"
            android:contentDescription="@string/n2_note_locked_details"
            app:srcCompat="@drawable/ic_menu_lock_dark" />

        <ImageView
            android:id="@+id/n2_mini_notif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:contentDescription="@string/n2_note_has_alert"
            app:srcCompat="@drawable/ic_menu_notif_dark" />

    </LinearLayout>

    <TextView
        android:id="@+id/n2_mini_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:text="@string/blank"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/n2_mini_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/n_edittext_border"
        android:ellipsize="end"
        android:gravity="start|top"
        android:text="@string/blank"
        android:textSize="18sp" />

</LinearLayout>