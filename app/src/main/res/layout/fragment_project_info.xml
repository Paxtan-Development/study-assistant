<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/p2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".project.ProjectInfoFragment">

    <LinearLayout
        android:id="@+id/p2_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/p2_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/p2_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:text="TextView" />

            <TextView
                android:id="@+id/p2_users"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:text="TextView" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6">

                <TextView
                    android:id="@+id/p2_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/p2_btns"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/p2_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                app:srcCompat="@drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/p2_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                app:srcCompat="@drawable/ic_project_task" />

            <ImageButton
                android:id="@+id/p2_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                app:srcCompat="@drawable/ic_project_status" />

            <ImageButton
                android:id="@+id/p2_export"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                app:srcCompat="@drawable/ic_menu_export" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/p2_task_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="TextView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        app:layout_constraintBottom_toTopOf="@+id/p2_id">

        <TableLayout
            android:id="@+id/p2_tasklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </TableLayout>
    </ScrollView>

</LinearLayout>